{% extends 'base.html.twig' %}

{% block body %}
  <div class="container">
    <div class="row" style="border: 1px solid white">
      <div class="col">
        {% for item in products %}
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">
                Product : {{ item.name }}
              </h5>
              <p class="card-text">
                Slug : {{ item.slug }}
              </p>
              <p>
                Price : {{ item.price }}
              </p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}
