{% extends 'base.html.twig' %}

{% block body %}
  <div class="container">
    <table class="table">
      <tr>
        <th>
          Nom
        </th>
        <th>
          Prix
        </th>
        <th>
          Slug
        </th>
        <th>
          Voir plus
        </th>
        <th>
            Modifier
          </th>
        <th>
          Supprimer
        </th>
      </tr>

      {% for product in products %}
        <tr>
          <td>
            {{ product.name }}
          </td>
          <td>
            {{ product.price }}
          </td>
          <td>
            {{ product.slug }}
          </td>
          <td>
            <a href="{{ path('detailedProducts',
                { id: product.id ,slug: product.slug }) }}">
              Voir plus
            </a>
          </td>

          <td>
            <a href="{{
              path(
                'editProduct',
                {
                  id: product.id
                }
              )
              }}">
              Modifier
            </a>
          </td>

          <td>
            <a href="{{
              path(
                'deleteProduct',
                {
                  id: product.id
                }
              )
              }}">
              Supprimer
            </a>
          </td>
        </tr>
      {% endfor %}
    </table>
  </div>
{% endblock %}
